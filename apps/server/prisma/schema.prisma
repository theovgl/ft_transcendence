datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int     @id @default(autoincrement())
  name           String  @unique
  email          String  @unique
  jwt            String?
  firstName      String?
  lastName       String?
  profilePicPath String?
  wins           Int    @default(0)
  loose          Int    @default(0)
  level          Float   @default(0)
  role           Role    @default(USER)
}

enum Role {
  USER
  ADMIN
}