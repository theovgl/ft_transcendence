datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int     @id @default(autoincrement())
  name           String  @unique
  email          String  @unique
  jwt            String?
  firstName      String?
  lastName       String?
  profilePicPath String?
  wins           Int    @default(0)
  loose          Int    @default(0)
  level          Float   @default(0)
  role           Role    @default(USER)
  matches        Match[]
}

model Match {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  endedAt   DateTime?
  users     User[]
  score     Score?
}

model Score {
  id      String @id @default(uuid())
  scoreUser1 Int
  scoreUser2 Int
  match   Match  @relation(fields: [matchId], references: [id])
  matchId String @unique
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

enum Role {
  USER
  ADMIN
}